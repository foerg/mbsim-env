<?xml version="1.0" encoding="UTF-8"?>
<RigidBody name="Stab{n+1}" xmlns="http://mbsim.berlios.de/MBSim"
  xmlns:pv="http://openmbv.berlios.de/MBXMLUtils/physicalvariable"
  xmlns:ombv="http://openmbv.berlios.de/OpenMBV">
  <initialGeneralizedPosition>[lO+lU;-lO-(lU+lO)*(n-1);0]</initialGeneralizedPosition>
  <initialGeneralizedVelocity>[0;0;0]</initialGeneralizedVelocity>
  <frameOfReference ref="../Frame[Os]"/>
  <frameForKinematics ref="Frame[C]"/>
  <mass>5000000</mass>
  <inertiaTensor>[0,0,0 ; 0,0,0 ; 0,0,0.041666666666666]</inertiaTensor>
  <translation>
    <LinearTranslation>
      <translationVectors>
        <pv:xmlMatrix>
          <pv:row>
            <pv:ele>1</pv:ele>
            <pv:ele>0</pv:ele>
          </pv:row>
          <pv:row>
            <pv:ele>0</pv:ele>
            <pv:ele>1</pv:ele>
          </pv:row>
          <pv:row>
            <pv:ele>0</pv:ele>
            <pv:ele>0</pv:ele>
          </pv:row>
        </pv:xmlMatrix>
      </translationVectors>
    </LinearTranslation>
  </translation>
  <rotation>
    <RotationAboutFixedAxis>
      <axisOfRotation>
        <pv:xmlVector>
          <pv:ele>0</pv:ele>
          <pv:ele>0</pv:ele>
          <pv:ele>1</pv:ele>
        </pv:xmlVector>
      </axisOfRotation>
    </RotationAboutFixedAxis>
  </rotation>
  <frame>
    <Frame name="O"/>
    <relativePosition>[0;lO;0]</relativePosition>
    <relativeOrientation>[1,0,0;0,1,0;0,0,1]</relativeOrientation>
  </frame>
  <frame>
    <Frame name="U"/>
    <relativePosition>[0;-lU;0]</relativePosition>
    <relativeOrientation>
      <pv:asciiMatrixRef href="eye.txt"/>
    </relativeOrientation>
  </frame>
  <openMBVRigidBody>
    <ombv:Frustum name="dummy">
      <ombv:staticColor>mod(n-1,3)/2</ombv:staticColor>
      <ombv:initialTranslation>
        <pv:asciiVectorRef href="inittrans.txt"/>
      </ombv:initialTranslation>
      <ombv:initialRotation>[1.5708;0;0]</ombv:initialRotation>
      <ombv:scaleFactor>1</ombv:scaleFactor>
      <ombv:baseRadius>0.02</ombv:baseRadius>
      <ombv:topRadius>0.02</ombv:topRadius>
      <ombv:height>1</ombv:height>
      <ombv:innerBaseRadius>0</ombv:innerBaseRadius>
      <ombv:innerTopRadius>0</ombv:innerTopRadius>
    </ombv:Frustum>
  </openMBVRigidBody>
</RigidBody>
